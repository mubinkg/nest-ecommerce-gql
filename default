server {
    listen 80;
    server_name kocart.com; # Set your domain or IP address

    location /api/graphql {
        proxy_pass http://localhost:3001/graphql; # Forward requests to your Nest.js application
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    location / {
        proxy_pass http://localhost:3002/; # Forward requests to your Next.js main application
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
    location /admin/ {
        proxy_pass http://localhost:3002/; # Forward requests to your Next.js main application
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}
stream {
    upstream mongodb {
        # Define the MongoDB server (localhost:27017 or the correct address)
        server 127.0.0.1:27017;  # Assuming MongoDB is running on localhost
    }

    server {
        listen 27017;  # MongoDB default port
        proxy_pass mongodb;
        proxy_timeout 10m;
        proxy_connect_timeout 1s;
    }
}
