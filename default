server {
    listen 80;
    server_name "34.42.45.11"; # Set your domain or IP address

    location /api {
        proxy_pass http://localhost:3001; # Forward requests to your Nest.js application
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}

server {
    listen 80;
    server_name "34.42.45.11"; # Set your domain or IP address

    location /admin {
        proxy_pass http://localhost:3000; # Forward requests to your Next.js application
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    # Additional Nginx configurations if needed
}

